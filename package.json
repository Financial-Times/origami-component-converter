{
	"name": "occ",
	"version": "0.14.5",
	"description": "origami component converter",
	"main": "index.js",
	"module": "main.js",
	"author": "chee <chee@snoot.club>",
	"license": "MPL-2.0",
	"dependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.3.1",
		"babel-plugin-add-module-exports": "^1.0.0",
		"esm": "^3.2.4",
		"fs-extra": "^7.0.1",
		"just-merge": "^1.1.0",
		"semver": "^5.6.0",
		"yargs": "^12.0.5"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"directory-snapshot": "0.0.5",
		"eslint": "^5.13.0",
		"eslint-config-origami-component": "^1.0.0",
		"mocha": "^5.2.0",
		"node": "^10.16.0",
		"o-spec-compliant-bower-config": "github:Financial-Times/o-test-component#v1.0.29",
		"prettier": "^1.18.2",
		"snap-shot-it": "^7.8.0"
	},
	"scripts": {
		"lint": "eslint .",
		"watch": "npm run-script build -s -- -w",
		"start": "node -r esm $npm_package_main",
		"run-tests": "mocha -r esm test",
		"clean-test-components": "echo 'cleaning test/components'; git clean -df -- test/components; git checkout -- test/components/",
		"test": "npm run-script --silent clean-test-components; npm run-script --silent run-tests; npm run-script --silent clean-test-components",
		"pretty": "prettier index.js main.js lib/**/*.js test/**/*.js --write"
	},
	"repository": {
		"git": "git@github.com:chee/origami"
	},
	"bin": {
		"occ": "./index.js"
	},
	"files": [
		"skeletons/",
		"commands/",
		"lib/",
		"config/",
		"index.js",
		"main.js"
	]
}
